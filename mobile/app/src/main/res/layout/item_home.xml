<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/itemHome"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp" >

    <ImageView
        android:id="@+id/homeImageView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:adjustViewBounds="true"
        android:contentDescription="@string/error_image"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_home"
        android:padding="7dp"
        android:background="@drawable/rounded_all_small_background"
        android:backgroundTint="@color/primary"
        app:tint="@color/white"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintWidth_percent="0.1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/nameTextView"
        style="@style/TextView"
        android:text="@string/home_name"
        android:layout_marginStart="20dp"
        app:layout_constraintTop_toTopOf="@+id/homeImageView"
        app:layout_constraintStart_toEndOf="@+id/homeImageView" />

    <TextView
        android:id="@+id/addressTextView"
        style="@style/TextView"
        android:text="@string/address_home"
        android:textSize="12sp"
        android:textColor="@color/homeAddress"
        android:layout_marginStart="20dp"
        app:layout_constraintTop_toBottomOf="@+id/nameTextView"
        app:layout_constraintStart_toEndOf="@+id/homeImageView" />

    <ImageView
        android:id="@+id/statusImageView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:adjustViewBounds="true"
        android:contentDescription="@string/error_image"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_lock_open"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="5dp"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintWidth_percent="0.05"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/statusTextView" />

    <TextView
        android:id="@+id/statusTextView"
        style="@style/TextView"
        android:text="@string/status_disarmed"
        android:textColor="@color/primary"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/propertiesImageView" />

    <ImageView
        android:id="@+id/propertiesImageView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:adjustViewBounds="true"
        android:contentDescription="@string/error_image"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_more"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="12dp"
        app:tint="@color/primary"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintWidth_percent="0.08"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>